<h2><%=current_user.username %></h2>
 <!-- Erb start looping through all rounds and get statistics -->
<% current_user.rounds.each do |round|   %>
  <table>
    <thead>
      <!-- #Deck name goes here -->
      <th class="centered"><%= round.deck.name  %></th>
    </thead>
    <tbody>
      <tr>
        <th class="centered">Date</th>
        <th class="centered">Cards in Deck</th>
        <th class="centered">First Guess Correct</th>
        <th class="centered">Total Guesses</th>
      </tr>
      <!-- #loop through each round played by user of deck -->
      <tr>
        <td><%= round.created_at.to_date.mon %>/<%= round.created_at.to_date.day %>/<%= round.created_at.to_date.year %></td>
        <td><%= round.deck.cards.count %></td>
        <td><%= round.number_right_first_try  %></td>
        <td><%= round.guesses.count %></td>
      </tr>
    </tbody>
  </table>
<% end %>
